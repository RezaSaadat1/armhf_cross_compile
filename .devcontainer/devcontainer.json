{
	"name": "Ubuntu",
	"build": {
        "dockerfile": "Dockerfile"
	},
	"features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": "true",
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000",
            "upgradePackages": "true"
        },
    	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools-extension-pack",
				"eamodio.gitlens"
			]
		}
	},
	"postCreateCommand": "./.devcontainer/postCreateCommand.sh"
}
